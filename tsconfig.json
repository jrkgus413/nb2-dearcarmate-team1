{
  "compilerOptions": {
    "target": "ES2020", // 최신 JS 기능 사용
    "module": "CommonJS", // Node.js는 CommonJS 모듈 시스템 사용
    "lib": ["ES2020"], // 사용할 표준 라이브러리
    "moduleResolution": "node", // Node.js 방식 모듈 해석
    "esModuleInterop": true, // CommonJS ↔ ESM 간 호환성 확보
    "forceConsistentCasingInFileNames": true, // 대소문자 구분 강제 (Unix 호환성)
    "strict": true, // 모든 strict 모드 활성화
    "skipLibCheck": true, // node_modules 내 타입 검사 생략 (속도 개선)
    "outDir": "./dist", // 컴파일 결과물 디렉토리
    "rootDir": "./src", // 소스 파일 루트 디렉토리
    "resolveJsonModule": true, // import json 지원
    "noImplicitAny": true, // 암시적 any 금지
    "noUnusedLocals": true, // 사용되지 않는 지역변수 검사
    "noUnusedParameters": true, // 사용되지 않는 매개변수 검사
    "noFallthroughCasesInSwitch": true, // switch 문 fallthrough 방지
    "typeRoots": ["./src/types", "./node_modules/@types"] // Declare Global 적용
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
