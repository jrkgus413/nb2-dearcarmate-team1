model CarModel {
  id                  BigInt    @id @default(autoincrement())
  carNumber           String    @map("car_number")
  manufacturer        String
  model               String
  manufacturingYear   Int       @map("manufacturing_year")
  mileage             BigInt
  price               BigInt
  accidentCount       Int       @map("accident_count")
  explanation         String?
  accidentDetails     String?   @map("accident_details")
  status              String
  imageUrl            String?   @map("image_url")
  companyId           BigInt
  uploadFileId        BigInt?   @map("upload_file_id")
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  isDeleted           Boolean   @default(false)

  // Relations
  company             Company   @relation(fields: [companyId], references: [id])
  uploadFile          File?     @relation("CarUploadFile", fields: [uploadFileId], references: [id])
  contracts           Contract[]
  images              Image[]

  @@map("cars")
}
